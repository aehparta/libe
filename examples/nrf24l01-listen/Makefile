
# default target is x86
TARGET = X86

# enable spi
USE += SPI LOG GPIO NRF24L01P
USE_X86 += FTDI

# pic8
MCU_PIC8 = 16F18345
F_CPU_PIC8 = 16000000
# DEFINES_PIC8 += SPI_BITBANG_SCLK=GPIOA0 SPI_BITBANG_MOSI=GPIOA1 SPI_BITBANG_MISO=GPIOA2
DEFINES_PIC8 += LOG_BAUD=115200 PIC8_LOG_TX_PPS=RA5PPS
DEFINES_PIC8 += SPI_HARDCODED_SS=GPIOC2 SPI_HARDCODED_MISO=GPIOB6 SPI_HARDCODED_MOSI=GPIOB5 SPI_HARDCODED_SCLK=GPIOB4
DEFINES_PIC8 += NRF24L01P_HARDCODED_CE=GPIOC1

# init make system
include $(LIBE_PATH)/init.mk

# our own sources etc
BUILD_BINS = nrf24l01_listen
PROGRAM_BIN = nrf24l01_listen
nrf24l01_listen_SRC = main.c $(libe_SRC)

# build
include $(LIBE_PATH)/build.mk

# programmable targets
include $(LIBE_PATH)/flash/program.mk

-include local.mk
